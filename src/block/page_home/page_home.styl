.page
	&_home
		.page
			&__row_1
				position relative
				min-height 600px
				display block
				background url(../img/header-bg.jpg) center bottom no-repeat
				background-size cover
				margin-bottom 50px
				&::before
					width 100%
					height 15%
					content ""
					background url(../img/header-bg-mask.svg) center bottom no-repeat
					position absolute
					background-size cover
					bottom 0
					z-index 2
					
@media tablet
	.page
		&_home
			.page
				&__row_1
					min-height 300px
					