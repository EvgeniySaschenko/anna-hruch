.page
	&_about
		.page
			&__row_2
				display flex
				flex-direction row
				justify-content space-between
				align-items flex-start
				flex-wrap wrap
				.page__col
					width 50%
					&_1
						text-align right
						.box-master
							display inline-block
							text-align center
							padding-right 30px
			&__row_3
				margin-bottom 50px
				

@media phone
	.page
		&_about
			.page
				&__row_2
					text-align center
					flex-direction column
					align-items center
					justify-content center
					.page__col
						width 100%
						&_1
							text-align center
							.box-master
								padding-right 0
						&_2
							text-align center
								