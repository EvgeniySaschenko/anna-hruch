.page
	&_gallery
		.list-link-img
			&_album
				display flex
				flex-direction row
				justify-content space-between
				align-items center
				flex-wrap wrap
				max-width 810px
				margin 0 auto
				margin-bottom 50px
				.list-link-img
					&__item
						text-align center
					&__link
						height 180px
						width 180px
						border-radius 50%
						overflow hidden
						border 4px solid corpColor
						display inline-block
						margin-bottom 20px
					&__img
						height 100%
					&__name
						font-size 30px
						
.page
	&_about
		.list-link-img
			&_diploma
				display flex
				flex-direction row
				justify-content center
				align-items center
				flex-wrap wrap
				max-width 500px
				margin 0 auto
				.list-link-img
					&__item
						padding 5px
						max-height 200px
						overflow hidden
						text-align center
					&__img
						height 100%
						

@media tablet
	.page
		&_gallery
			.list-link-img
				&_album
					max-width 450px
					.list-link-img
						&__item
							margin-bottom 30px

@media phone
	.page
		&_gallery
			.list-link-img
				&_album
					max-width 350px
					justify-content center
					.list-link-img
						&__link
							height 150px
							width 150px
							
	.page
		&_about
			.list-link-img
				&_diploma
					max-width 300px
					.list-link-img
						&__img
							margin 0 auto
							